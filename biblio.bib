@Article{Steppan2002,
  author        = {Steppan, Scott J. and Phillips, Patrick C. and Houle, David},
  title         = {Comparative quantitative genetics: evolution of the G matrix},
  year          = {2002},
  volume        = {17},
  number        = {7},
  pages         = {320--327},
