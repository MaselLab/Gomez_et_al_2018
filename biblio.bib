@Article{Arnold2008,
  author    = {Arnold, Stevan J. and Bürger, Reinhard and Hohenlohe, Paul A. and Ajie, Beverley C. and Jones, Adam G.},
  title     = {UNDERSTANDING THE EVOLUTION AND STABILITY OF THE G-MATRIX},
  journal   = {Evolution},
  year      = {2008},
  volume    = {62},
  number    = {10},
  pages     = {2451--2461},
  issn      = {1558-5646},
  abstract  = {The G-matrix summarizes the inheritance of multiple, phenotypic traits. The stability and evolution of this matrix are important issues because they affect our ability to predict how the phenotypic traits evolve by selection and drift. Despite the centrality of these issues, comparative, experimental, and analytical approaches to understanding the stability and evolution of the G-matrix have met with limited success. Nevertheless, empirical studies often find that certain structural features of the matrix are remarkably constant, suggesting that persistent selection regimes or other factors promote stability. On the theoretical side, no one has been able to derive equations that would relate stability of the G-matrix to selection regimes, population size, migration, or to the details of genetic architecture. Recent simulation studies of evolving G-matrices offer solutions to some of these problems, as well as a deeper, synthetic understanding of both the G-matrix and adaptive radiations.},
  keywords  = {Adaptive landscape, genetic variance-covariance matrix, phenotypic evolution, selection surface, rank5},
  publisher = {Blackwell Publishing Inc},
  review    = {KEY RESULTS: Reviews empirical, analytical, and simulations studies of the G-matrix with the focus on stability and evolution.

COMMENTS:
-Five emerging generalizations (albeit controversial) in the empirical front: (i) genetic variation is abundant in most populations for many kinds of characters, (ii) variety of lines of evidence suggest phenotypic diversification is primarily driven by selection rather than drift, (iii) Significant evolutionary change can occur over few generations, on an ecological time scale, (iv) Stasis is a prevalent (perhaps the most prevalent) mode of evolution despite evident capacity for rapid evolutionary responses to environmental challenges (implied by i-iii), (v) Correlated evolution of multiple traits is common as reflected by consistent patterns of trait association that are apparent at all levels of divergence.
